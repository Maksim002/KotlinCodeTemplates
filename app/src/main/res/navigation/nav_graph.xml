<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.example.kotlincodetemplates.ui.gallery.GalleryFragment"
        android:label="Gallery"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_galleryFragment_to_progressBarFragment"
            app:destination="@id/progressBarFragment" />
        <action
            android:id="@+id/action_galleryFragment_to_scrollVerticalFragment"
            app:destination="@id/scrollVerticalFragment" />
        <action
            android:id="@+id/action_galleryFragment_to_webViewFragment"
            app:destination="@id/webViewFragment" />
        <action
            android:id="@+id/action_galleryFragment_to_cardViewFragment"
            app:destination="@id/cardViewFragment" />
        <action
            android:id="@+id/action_galleryFragment_to_buttonFragment"
            app:destination="@id/buttonFragment" />
    </fragment>



    <fragment
        android:id="@+id/webViewFragment"
        android:name="com.example.kotlincodetemplates.ui.web.WebViewFragment"
        android:label="Installing Android Studio"
        tools:layout="@layout/fragment_web_view"/>



    <fragment
        android:id="@+id/scrollVerticalFragment"
        android:name="com.example.kotlincodetemplates.ui.scrollVertical.ScrollVerticalFragment"
        android:label="Scroll Vertical"
        tools:layout="@layout/fragment_scroll_view">
        <action
            android:id="@+id/action_scrollVerticalFragment_to_progressDisplayFragment"
            app:destination="@id/progressDisplayFragment" />
        <action
            android:id="@+id/action_scrollVerticalFragment_to_codeScrollVerticalFragment"
            app:destination="@id/codeScrollVerticalFragment" />
    </fragment>

    <fragment
        android:id="@+id/codeScrollVerticalFragment"
        android:name="com.example.kotlincodetemplates.ui.scrollVertical.components.CodeScrollVerticalFragment"
        android:label="Scroll Code"
        tools:layout="@layout/fragment_code_scroll"/>

    <fragment
        android:id="@+id/progressDisplayFragment"
        android:name="com.example.kotlincodetemplates.ui.progressBar.components.ProgressDisplayFragment"
        android:label="Progress Display"
        tools:layout="@layout/fragment_progress_display"/>



    <fragment
        android:id="@+id/progressBarFragment"
        android:name="com.example.kotlincodetemplates.ui.progressBar.ProgressBarFragment"
        android:label="Progress View"
        tools:layout="@layout/fragment_progress_bar">
        <action
            android:id="@+id/action_progressBarFragment_to_scrollDisplayFragment2"
            app:destination="@id/scrollDisplayFragment" />
        <action
            android:id="@+id/action_progressBarFragment_to_codeProgressBarFragment"
            app:destination="@id/codeProgressBarFragment" />
    </fragment>

    <fragment
        android:id="@+id/codeProgressBarFragment"
        android:name="com.example.kotlincodetemplates.ui.progressBar.components.CodeProgressBarFragment"
        android:label="Progress Code"
        tools:layout="@layout/fragment_code_progress_bar" />

    <fragment
        android:id="@+id/scrollDisplayFragment"
        android:name="com.example.kotlincodetemplates.ui.scrollVertical.components.ScrollDisplayFragment"
        android:label="Scroll Display"
        tools:layout="@layout/fragment_scroll_display"/>


    <fragment
        android:id="@+id/cardViewFragment"
        android:name="com.example.kotlincodetemplates.ui.card.CardViewFragment"
        android:label="Scroll Display"
        tools:layout="@layout/fragment_card_view">
        <action
            android:id="@+id/action_cardViewFragment_to_codeCardFragment"
            app:destination="@id/codeCardFragment" />
        <action
            android:id="@+id/action_cardViewFragment_to_cardDisplayFragment"
            app:destination="@id/cardDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/codeCardFragment"
        android:name="com.example.kotlincodetemplates.ui.card.components.CodeCardFragment"
        android:label="Card Code"
        tools:layout="@layout/fragment_card_bar"/>

    <fragment
        android:id="@+id/cardDisplayFragment"
        android:name="com.example.kotlincodetemplates.ui.card.components.CardDisplayFragment"
        android:label="Card Display"
        tools:layout="@layout/fragment_card_display"/>


    <fragment
        android:id="@+id/buttonFragment"
        android:name="com.example.kotlincodetemplates.ui.bottom.ButtonFragment"
        android:label="Scroll Display"
        tools:layout="@layout/fragment_card_view">
        <action
            android:id="@+id/action_buttonFragment_to_codeButtonFragment"
            app:destination="@id/codeButtonFragment" />
        <action
            android:id="@+id/action_buttonFragment_to_buttonDisplayFragment"
            app:destination="@id/buttonDisplayFragment" />
    </fragment>

    <fragment
        android:id="@+id/codeButtonFragment"
        android:name="com.example.kotlincodetemplates.ui.bottom.components.CodeButtonFragment"
        android:label="Scroll Display"
        tools:layout="@layout/fragment_code_button"/>

    <fragment
        android:id="@+id/buttonDisplayFragment"
        android:name="com.example.kotlincodetemplates.ui.bottom.components.ButtonDisplayFragment"
        android:label="Scroll Display"
        tools:layout="@layout/fragment_button_display">
    </fragment>
</navigation>